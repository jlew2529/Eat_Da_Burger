<div class="container">
    <div class="row">

        <div class="col-md-12 text-center" id="top-bar">
            <!-- Remember to put an image -->
            <img src="../public/img/Burger.jpg" alt="burger">
            <h1>Eat-Da-Burger</h1>
        </div>

        <div class="col-md-6 text-center" class="task">
            <div class="row">
                <!-- Put in data -->
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-md-9 text-center">
                    <!-- Put in data -->
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-md-3 text-center">
                    <form class="devour-form button-size">
                        <input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
                        <button type="submit" class="btn btn-default">Devour it</button>
                    </form>
                </div>
                <!-- Put in data -->
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-md-6 text-center" class="task">
            <!-- Put in data -->
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
            <!-- Put in data -->
            {{/if}}
            {{/each}}
        </div>

    </div>
</div>

<div class="container">
    <div class="row">

        <div class="col-md-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter the type of burger you want to eat then CLICK the "Submit" button.</p>
        </div>

    </div>
</div>
